/**index.wxss**/
/* flex-direction: column;排列方向自上而下
    flex-warp:warp; 溢出换行处理
    overflow:scroll 滚屏显示 小程序提供了一个组件
    <scroll-view scroll-y(沿着y轴滚动)></scroll-view>
    同时设置样式overflow：hidden；
 */
page{
  height: 100%;
}
view{
  margin: 0;
  padding: 0;
}
.root{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f0f0f0;
}
.tabs{
  background-color: pink;
  display: flex;
}
.tabs .item{
  flex: 1;
  text-align: center;
  font-size: 12px;
  background-color: #222;
  color:#ccc;
  padding: 8px 0;
  /* cursor: pointer; */
}
.tabs .item:active{
  color: #fff;
  border-bottom: 2px solid #e9232c;
}
.content{
  background-color: #232226;
  flex: 1;
  overflow: hidden;
}
/*
可以通过设置改变行高改变圆点位置
 .carousel{
  line-height: 35px;
} */
.carousel image{
  display: block;
  width: 100%;
  height: 130px;
}
.portals{
  display: flex;
  flex-direction: row;
}
.item  {
  flex: 1;
}
.item image{
  display: block;
  width: 100%;
  height: 70px;
}

.player{
  display: flex;
  height: 50px;
  color: white;
  background-color: #17181a;
  padding-top: 8px;
}
.poster image{
  width: 40px;
  height: 40px;
}
.info{
  font-size: 14px;
  flex: 1;
}
.info .title{
  display: block;
}
.controls image{
  width: 40px;
  height: 40px;
}
.lists{
  border-top: 1rpx solid #666;
  padding-top: 30px;
}
.lists .title{
  margin-left: 10px;
  color: #848484;
  font-size: 12px;
}
.lists .inner{
  display: flex;
  flex-wrap: wrap;
}
.lists .inner .item{
  width: 33.333333%;
  font-size: 12px;
  color: #848484;
  padding-bottom: 20px;
}
.lists .inner .item image{
  display: block;
  width: 120px;
  height: 120px;
  margin: 0 auto;
}
